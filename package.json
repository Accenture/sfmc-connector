{
  "name": "sfmc-custom-connector",
  "private": true,
  "version": "1.0.0",
  "description": "Library for integrating with SFMC",
  "scripts": {
    "lint": "npm run lint:lwc && npm run lint:aura",
    "pipelineLint": "eslint force-app/**/*.js -f json -o report.json --quiet ; exit 0",
    "lint:aura": "eslint **/aura/**",
    "lint:commit": "lint-staged --quiet",
    "lint:lwc": "eslint **/lwc/**",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "fix": "eslint force-app --fix && stylelint force-app/**/lwc/**/*.css  --fix",
    "prettier": "prettier --loglevel warn --write \"force-app/**/*.{cls,cmp,component,css,html,js,page,trigger,xml}\"",
    "prettier:verify": "prettier --list-different \"**/*.{cls,cmp,component,css,html,js,page,trigger,xml}\""
  },
  "dependencies": {
    "@lwc/eslint-plugin-lwc": "^1.6.3",
    "@prettier/plugin-xml": "^3.1.0",
    "@salesforce/eslint-config-lwc": "^3.5.2",
    "@salesforce/eslint-plugin-aura": "^2.1.0",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-jsdoc": "^46.4.3",
    "eslint-plugin-unicorn": "^47.0.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^15.10.1",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-declaration-strict-value": "^1.9.2",
    "stylelint-prettier": "^4.0.0"
  },
  "devDependencies": {
    "@salesforce/sfdx-lwc-jest": "^1.4.1",
    "lint-staged": "^13.2.3",
    "parse-git-numstat": "^1.1.2",
    "prettier": "3.0.0",
    "prettier-plugin-apex": "2.0.1",
    "xml-js": "^1.6.11"
  },
  "versions": {
    "sfdx": "7.203.6"
  },
  "plugins": [
    "sfpowerkit",
    "sfdmu",
    "@salesforce/sfdx-scanner",
    "texei-sfdx-plugin",
    "sfdx-browserforce-plugin",
    "sfdx-git-delta@stable"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
